
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=@cocktail.image_url%>);">
  <div class="container">
    <h1 class="text-center"><%=@cocktail.name%> </h1>
  </div>
</div>



<div class="container">

<div class="d-flex justify-content-between">
<div class="cocktails">
<h2>Ingredients:</h2>
<% @cocktail.doses.each do |dose| %>

<p><%= dose.ingredient.name %> - <%= dose.description %> 
<%= link_to "Remove ",
 dose_path(dose),
  method: :delete,
  data: {confirm: "Are you sure ?" } %></p>
  






<% end %>
</div>


<%= simple_form_for [@cocktail, @dose]  do |f| %>
<%= f.input :description %>
<%= f.association :ingredient, class: "select2" %>

<%= f.submit "Add Dose", class: "btn btn-primary" %>
<% end %>
</div>
</div>





