
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=@cocktail.image_url%>);">
  <div class="container">
    <h1 class="text-center"><%=@cocktail.name%> </h1>
  </div>
</div> 



<div class="container">

<div class="d-flex justify-content-between p-4">
<%= image_tag  "#{@cocktail.image_url}", size:"400x450" %>
<div class="cocktails">
<h2>Ingredients:</h2>
<% @cocktail.doses.each do |dose| %>

<p><%= dose.ingredient.name %> - <%= dose.description %> 
<%= link_to "Remove ",
 dose_path(dose),
  method: :delete,
  data: {confirm: "Are you sure ?" } %></p>
  






<% end %>
</div>

<div class="ingredient-form ">
<%= simple_form_for [@cocktail, @dose]  do |f| %>
<%= f.input :description %>
<%= f.association :ingredient, input_html: {class:"select2"} %>

<%= f.submit "Add Dose", class: "btn btn-outline-secondary" %>
<% end %>
</div>
</div>
</div>
<% @cocktail.reviews.each do |review| %>

<p><%= review.content %></p> 
<p><%= review.rating %></p> 
<% end %>

<%= simple_form_for [@cocktail, @review]  do |f| %>
<%= f.input :content %>
<%= f.input :rating %>

<%= f.submit "Add review", class: "btn btn-outline-secondary" %>
<% end %>



